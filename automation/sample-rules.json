{
  "version": "1.0",
  "rules": [
    {
      "id": "market_volatility_control",
      "name": "Market Volatility Control",
      "venture_type": "SaaSVenture",
      "condition": {
        "AND": [
          {
            "metric": "market_volatility",
            "operator": "greater_than",
            "value": 0.8
          },
          {
            "metric": "risk_profile",
            "operator": "equals",
            "value": "High"
          }
        ]
      },
      "action": {
        "type": "update_venture_status",
        "parameters": {
          "new_status": "On Hold",
          "notify_roles": ["FinancialStrategist"],
          "priority": "high"
        }
      }
    },
    {
      "id": "saas_performance_monitor",
      "name": "SaaS Performance Monitor",
      "venture_type": "SaaSVenture",
      "condition": {
        "OR": [
          {
            "metric": "monthly_churn_rate",
            "operator": "greater_than",
            "value": 0.05
          },
          {
            "metric": "mrr_growth_rate",
            "operator": "less_than",
            "value": 0.10
          }
        ]
      },
      "action": {
        "type": "trigger_review",
        "parameters": {
          "assign_to": "ProductDevSpecialist",
          "priority": "high",
          "required_actions": ["optimize_retention", "review_pricing"]
        }
      }
    },
    {
      "id": "ecommerce_performance_alert",
      "name": "E-commerce Performance Alert",
      "venture_type": "EcommerceVenture",
      "condition": {
        "AND": [
          {
            "metric": "cart_abandonment_rate",
            "operator": "greater_than",
            "value": 0.7
          },
          {
            "metric": "customer_acquisition_cost",
            "operator": "greater_than",
            "value": 50.0
          }
        ]
      },
      "action": {
        "type": "optimize_funnel",
        "parameters": {
          "notify_roles": ["MarketingStrategist"],
          "priority": "high",
          "optimization_areas": ["checkout_process", "marketing_spend"]
        }
      }
    },
    {
      "id": "compliance_risk_assessment",
      "name": "Compliance Risk Monitor",
      "venture_type": "DigitalVenture",
      "condition": {
        "OR": [
          {
            "metric": "regulatory_compliance_score",
            "operator": "less_than",
            "value": 0.95
          },
          {
            "metric": "data_protection_score",
            "operator": "less_than",
            "value": 0.98
          }
        ]
      },
      "action": {
        "type": "compliance_review",
        "parameters": {
          "notify_roles": ["RegulatoryExpert", "LegalCounsel"],
          "priority": "critical",
          "required_actions": ["audit_compliance", "update_policies"]
        }
      }
    }
  ]
}